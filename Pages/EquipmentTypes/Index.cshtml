@page
@model Proyecto_Laboratorios_Univalle.Pages.EquipmentTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentTypes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentTypes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentTypes[0].RequiresCalibration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentTypes[0].MaintenanceFrequencyMonths)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EquipmentTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresCalibration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceFrequencyMonths)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
