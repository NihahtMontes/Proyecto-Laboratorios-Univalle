@page
@model Proyecto_Laboratorios_Univalle.Pages.EquipmentTypes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Tipo de Equipo";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Tipo de Equipo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipmentType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentType.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipmentType.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentType.RequiresCalibration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipmentType.RequiresCalibration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentType.MaintenanceFrequencyMonths)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipmentType.MaintenanceFrequencyMonths)
        </dd>
        <hr />
        <dt class="col-sm-2">
            Auditoría
        </dt>
        <dd class="col-sm-10">
            <small>
                <strong>Creado:</strong> @Model.EquipmentType.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                @if (Model.EquipmentType.CreatedBy != null)
                {
                    <span> por @Model.EquipmentType.CreatedBy.FullName</span>
                }
                <br />
                @if (Model.EquipmentType.LastModifiedDate.HasValue)
                {
                    <strong>Modificado:</strong> @Model.EquipmentType.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")
                    @if (Model.EquipmentType.ModifiedBy != null)
                    {
                        <span> por @Model.EquipmentType.ModifiedBy.FullName</span>
                    }
                }
            </small>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="EquipmentType.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver al Listado</a>
    </form>
</div>
