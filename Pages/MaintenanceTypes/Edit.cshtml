@page
@model Proyecto_Laboratorios_Univalle.Pages.MaintenanceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Tipo de Mantenimiento</h1>

<h4>Tipo de Mantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaintenanceType.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MaintenanceType.Name" class="control-label"></label>
                <input asp-for="MaintenanceType.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="MaintenanceType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceType.Description" class="control-label"></label>
                <input asp-for="MaintenanceType.Description" class="form-control" />
                <span asp-validation-for="MaintenanceType.Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
