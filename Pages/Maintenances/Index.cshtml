@page
@model Proyecto_Laboratorios_Univalle.Pages.Maintenances.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Índice de Mantenimientos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table table-hover table-striped">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Maintenances[0].Equipment)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenances[0].MaintenanceType)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenances[0].Technician)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenances[0].ScheduledDate)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenances[0].Status)</th>
            <th>Registrado</th>
            <th>Modificado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Maintenances) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Equipment.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.MaintenanceType.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Technician.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.ScheduledDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.CreatedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.CreatedBy.Initials)
                </small>
            </td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.LastModifiedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.ModifiedBy.Initials)
                </small>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar"><i class="fas fa-edit"></i></a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
