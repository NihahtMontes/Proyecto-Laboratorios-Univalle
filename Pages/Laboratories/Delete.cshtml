@page
@model Proyecto_Laboratorios_Univalle.Pages.Laboratories.DeleteModel

@{
    ViewData["Title"] = "Eliminar Laboratorio";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Laboratorio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Building)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Floor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Floor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory.Faculty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Faculty.Name)
        </dd>
        <hr class="col-12" />
        <dt class="col-sm-2">
            Fecha de Registro
        </dt>
        <dd class="col-sm-10">
            @Model.Laboratory.CreatedDate.ToString("dd/MM/yyyy HH:mm")
            @if (Model.Laboratory.CreatedBy != null)
            {
                <span class="text-muted"> por @Model.Laboratory.CreatedBy.FullName</span>
            }
        </dd>
        @if (Model.Laboratory.LastModifiedDate.HasValue)
        {
            <dt class="col-sm-2">
                Última Modificación
            </dt>
            <dd class="col-sm-10">
                @Model.Laboratory.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")
                @if (Model.Laboratory.ModifiedBy != null)
                {
                    <span class="text-muted"> por @Model.Laboratory.ModifiedBy.FullName</span>
                }
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Laboratory.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver al Listado</a>
    </form>
</div>
