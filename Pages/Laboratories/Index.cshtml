@page
@model Proyecto_Laboratorios_Univalle.Pages.Laboratories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laboratories[0].Faculty)
            </th>
            <th>Registrado</th>
            <th>Modificado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Laboratories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.Name)
            </td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.CreatedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.CreatedBy.Initials)
                </small>
            </td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.LastModifiedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.ModifiedBy.Initials)
                </small>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Editar</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Detalles</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
