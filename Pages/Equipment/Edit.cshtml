@page
@model Proyecto_Laboratorios_Univalle.Pages.Equipment.EditModel

@{
    ViewData["Title"] = "Editor Equipment";
}

<h1>Edit Equipment</h1>

<h4>@Model.Equipment.Name</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.Id" />
            <input type="hidden" asp-for="Equipment.CountryId" />
            <input type="hidden" asp-for="Equipment.CityId" />

            <!-- ========================================
                 BASIC INFORMATION
                 ======================================== -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Basic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.Name" class="control-label">
                                    <span class="text-danger">*</span> Equipment Name
                                </label>
                                <input asp-for="Equipment.Name" class="form-control" required />
                                <span asp-validation-for="Equipment.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.InventoryNumber" class="control-label">
                                    <span class="text-danger">*</span> Inventory N°
                                </label>
                                <input asp-for="Equipment.InventoryNumber" class="form-control" required />
                                <span asp-validation-for="Equipment.InventoryNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.EquipmentTypeId" class="control-label">
                                    <span class="text-danger">*</span> Equipment Type
                                </label>
                                <select asp-for="Equipment.EquipmentTypeId" class="form-control" asp-items="ViewBag.EquipmentTypeId" required></select>
                                <span asp-validation-for="Equipment.EquipmentTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.LaboratoryId" class="control-label">
                                    <span class="text-danger">*</span> Laboratory
                                </label>
                                <select asp-for="Equipment.LaboratoryId" class="form-control" asp-items="ViewBag.LaboratoryId" required></select>
                                <span asp-validation-for="Equipment.LaboratoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========================================
                 TECHNICAL SPECS
                 ======================================== -->
            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Technical Specs</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.Brand" class="control-label"></label>
                                <input asp-for="Equipment.Brand" class="form-control" />
                                <span asp-validation-for="Equipment.Brand" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.Model" class="control-label"></label>
                                <input asp-for="Equipment.Model" class="form-control" />
                                <span asp-validation-for="Equipment.Model" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.SerialNumber" class="control-label"></label>
                                <input asp-for="Equipment.SerialNumber" class="form-control" />
                                <span asp-validation-for="Equipment.SerialNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========================================
                 FINANCIAL & LIFECYCLE
                 ======================================== -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Financial Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.AcquisitionDate" class="control-label"></label>
                                <input asp-for="Equipment.AcquisitionDate" class="form-control" type="date" />
                                <span asp-validation-for="Equipment.AcquisitionDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.AcquisitionValue" class="control-label"></label>
                                <input asp-for="Equipment.AcquisitionValue" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Equipment.AcquisitionValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Equipment.UsefulLifeYears" class="control-label"></label>
                                <input asp-for="Equipment.UsefulLifeYears" class="form-control" type="number" min="0" max="100" />
                                <span asp-validation-for="Equipment.UsefulLifeYears" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========================================
                 ORIGIN (READ ONLY)
                 ======================================== -->
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Origin (ReadOnly)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Country</label>
                                <input value="@Model.Equipment.Country?.Name" class="form-control" readonly disabled />
                                <small class="form-text text-muted">Origin cannot be modified after creation.</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">City</label>
                                <input value="@Model.Equipment.City?.Name" class="form-control" readonly disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========================================
                 STATUS & OBSERVATIONS
                 ======================================== -->
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Status & Observations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.CurrentStatus" class="control-label">
                                    <span class="text-danger">*</span> Current Status
                                </label>
                                <select asp-for="Equipment.CurrentStatus" class="form-control" asp-items="ViewBag.ListaEstadosEquipo" required></select>
                                <span asp-validation-for="Equipment.CurrentStatus" class="text-danger"></span>
                                <small class="form-text text-muted">Status changes will be automatically recorded in history.</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Equipment.Observations" class="control-label"></label>
                                <textarea asp-for="Equipment.Observations" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Equipment.Observations" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========================================
                 ACTION BUTTONS
                 ======================================== -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <a asp-page="./Details" asp-route-id="@Model.Equipment.Id" class="btn btn-info">
                    <i class="fas fa-eye"></i> View Details
                </a>
            </div>
        </form>
    </div>

    <!-- ========================================
         SIDE PANEL
         ======================================== -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Record Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Created:</strong> @Model.Equipment.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                @if (Model.Equipment.LastModifiedDate.HasValue)
                {
                    <p><strong>Last Modified:</strong> @Model.Equipment.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                }
                @if (Model.Equipment.AgeYears.HasValue)
                {
                    <p><strong>Age:</strong> @Model.Equipment.AgeYears years</p>
                }
                @if (Model.Equipment.RequiresReplacement)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> Needs Replacement.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}