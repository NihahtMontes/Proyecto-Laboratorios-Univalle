@page
@model Proyecto_Laboratorios_Univalle.Pages.Equipment.DetailsModel

@{
    ViewData["Title"] = "Equipment Details";
}

<h1>Equipment Details</h1>

<div class="row">
    <!-- ========================================
         MAIN COLUMN: EQUIPMENT INFO
         ======================================== -->
    <div class="col-md-8">

        <!-- BASIC INFO -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Basic Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.Name)</dt>
                    <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Equipment.Name)</strong></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.InventoryNumber)</dt>
                    <dd class="col-sm-8"><span class="badge badge-secondary">@Html.DisplayFor(model => model.Equipment.InventoryNumber)</span></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.EquipmentType)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.EquipmentType.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.Laboratory)</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Equipment.Laboratory.Name)
                        <small class="text-muted">(@Model.Equipment.Laboratory?.Faculty?.Name)</small>
                    </dd>

                    <dt class="col-sm-4">Current Status</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Equipment.CurrentStatus)
                    </dd>
                </dl>
            </div>
        </div>

        <!-- TECHNICAL SPECS -->
        <div class="card mb-3">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-cogs"></i> Technical Specs</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.Brand)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.Brand)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.Model)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.Model)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.SerialNumber)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.SerialNumber)</dd>
                </dl>
            </div>
        </div>

        <!-- FINANCIAL INFO -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Financial Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.AcquisitionDate)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Equipment.AcquisitionDate.HasValue)
                        {
                            @Model.Equipment.AcquisitionDate.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Not specified</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.AcquisitionValue)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Equipment.AcquisitionValue.HasValue)
                        {
                            @Model.Equipment.AcquisitionValue.Value.ToString("C")
                        }
                        else
                        {
                            <span class="text-muted">Not specified</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.UsefulLifeYears)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Equipment.UsefulLifeYears.HasValue)
                        {
                            @Model.Equipment.UsefulLifeYears
                        }
                        else
                        {
                            <span class="text-muted">Not specified</span>
                        }
                    </dd>

                    @if (Model.Equipment.AgeYears.HasValue)
                    {
                        <dt class="col-sm-4">Equipment Age</dt>
                        <dd class="col-sm-8">
                            @Model.Equipment.AgeYears years
                            @if (Model.Equipment.RequiresReplacement)
                            {
                                <span class="badge badge-warning ml-2">
                                    <i class="fas fa-exclamation-triangle"></i> Needs Replacement
                                </span>
                            }
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <!-- ORIGIN -->
        <div class="card mb-3">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> Origin</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.Country)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.Country.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Equipment.City)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipment.City.Name)</dd>
                </dl>
            </div>
        </div>

        <!-- OBSERVATIONS -->
        @if (!string.IsNullOrEmpty(Model.Equipment.Observations))
        {
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-comment"></i> Observations</h5>
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(model => model.Equipment.Observations)</p>
                </div>
            </div>
        }

        <!-- ========================================
             STATUS HISTORY
             ======================================== -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-history"></i> Status History</h5>
            </div>
            <div class="card-body">
                @if (Model.Equipment.StateHistory != null && Model.Equipment.StateHistory.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Status</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Duration</th>
                                    <th>Registered By (Created By)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.Equipment.StateHistory.OrderByDescending(e => e.StartDate))
                                {
                                    <tr class="@(history.EndDate == null ? "table-success" : "")">
                                        <td>
                                            <strong>@history.Status</strong>
                                            @if (history.EndDate == null)
                                            {
                                                <span class="badge badge-success ml-2">Current</span>
                                            }
                                        </td>
                                        <td>@history.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (history.EndDate.HasValue)
                                            {
                                                @history.EndDate.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Ongoing</span>
                                            }
                                        </td>
                                        <td>
                                            @if (history.DurationDays.HasValue)
                                            {
                                                if (history.DurationDays < 1)
                                                {
                                                    <span>Less than 1 day</span>
                                                }
                                                else
                                                {
                                                    <span>@history.DurationDays days</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (history.CreatedBy != null)
                                            {
                                                @history.CreatedBy.FullName
                                            }
                                            else
                                            {
                                                <span class="text-muted">System</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No status history found.</p>
                }
            </div>
        </div>

    </div>

    <!-- ========================================
         SIDE COLUMN: AUDIT & ACTIONS
         ======================================== -->
    <div class="col-md-4">

        <!-- AUDIT -->
        <div class="card mb-3">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-user-shield"></i> Audit</h5>
            </div>
            <div class="card-body">
                <p>
                    <strong>Created:</strong><br>
                    @Model.Equipment.CreatedDate.ToString("dd/MM/yyyy HH:mm")<br>
                    @if (Model.Equipment.CreatedBy != null)
                    {
                        <small class="text-muted">by @Model.Equipment.CreatedBy.FullName</small>
                    }
                </p>
                @if (Model.Equipment.LastModifiedDate.HasValue)
                {
                    <p>
                        <strong>Last Modified:</strong><br>
                        @Model.Equipment.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")<br>
                        @if (Model.Equipment.ModifiedBy != null)
                        {
                            <small class="text-muted">by @Model.Equipment.ModifiedBy.FullName</small>
                        }
                    </p>
                }
            </div>
        </div>

        <!-- ACTIONS -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-tools"></i> Actions</h5>
            </div>
            <div class="card-body">
                <a asp-page="./Edit" asp-route-id="@Model.Equipment.Id" class="btn btn-warning btn-block mb-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-secondary btn-block mb-2">
                    <i class="fas fa-list"></i> Back to List
                </a>
                <!-- Maintenance Link commented out until renamed -->
                <!-- 
                <a asp-page="/Maintenances/Create" asp-route-equipmentId="@Model.Equipment.Id" class="btn btn-info btn-block mb-2">
                    <i class="fas fa-wrench"></i> New Maintenance
                </a>
                -->
                <a asp-page="./Delete" asp-route-id="@Model.Equipment.Id" class="btn btn-danger btn-block">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </div>

    </div>
</div>