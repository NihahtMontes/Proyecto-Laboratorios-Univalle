                <span asp-validation-for="SystemUser.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemUser.HireDate" class="control-label"></label>
                <input asp-for="SystemUser.HireDate" class="form-control" />
                <span asp-validation-for="SystemUser.HireDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
