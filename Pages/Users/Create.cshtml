                <span class="text-danger">*</span>
                <label asp-for="SystemUser.FirstName" class="control-label"></label>
                <input asp-for="SystemUser.FirstName" class="form-control" aria-required="true"/>
                <span asp-validation-for="SystemUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SystemUser.LastName" class="control-label"></label>
                <input asp-for="SystemUser.LastName" class="form-control" aria-required="true"/>
                <span asp-validation-for="SystemUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemUser.SecondLastName" class="control-label"></label>
                <input asp-for="SystemUser.SecondLastName" class="form-control" />
                <span asp-validation-for="SystemUser.SecondLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SystemUser.IdentityCard" class="control-label"></label>
                <input asp-for="SystemUser.IdentityCard" class="form-control" aria-required="true"/>
                <span asp-validation-for="SystemUser.IdentityCard" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SystemUser.PhoneNumber" class="control-label"></label>
                <input asp-for="SystemUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="SystemUser.PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SystemUser.Email" class="control-label"></label>
                <input asp-for="SystemUser.Email" class="form-control" />
                <span asp-validation-for="SystemUser.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SystemUser.UserName" class="control-label"></label>
                <input asp-for="SystemUser.UserName" class="form-control" aria-required="true"/>
                <span asp-validation-for="SystemUser.UserName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" aria-required="true"/>
