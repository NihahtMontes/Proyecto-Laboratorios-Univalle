@page
@model Proyecto_Laboratorios_Univalle.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h1>Detalles</h1>

<div>
    <h4>Detalles de Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre Completo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName) @Html.DisplayFor(model => model.User.SecondLastName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.IdentityCard)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.IdentityCard)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.Role)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Role)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.Status)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Status)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.Position)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Position)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.Department)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Department)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.HireDate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.HireDate)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.PhoneNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.PhoneNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User.UserName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>

        <hr />
        <dt class="col-sm-3">Información de Auditoría</dt>
        <dd class="col-sm-9">
            <small>
                Creado: @Model.User.CreatedDate.ToString("dd/MM/yyyy HH:mm") por @(Model.User.CreatedBy?.FullName ?? "Sistema")<br />
                @if (Model.User.LastModifiedDate.HasValue)
                {
                    <span>Modificado: @Model.User.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm") por @(Model.User.ModifiedBy?.FullName ?? "N/A")</span>
                }
            </small>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.Id">Editar</a> |
    <a asp-page="./Index">Volver al Listado</a>
</div>
