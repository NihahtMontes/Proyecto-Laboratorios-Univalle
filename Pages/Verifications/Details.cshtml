@page
@model Proyecto_Laboratorios_Univalle.Pages.Verifications.DetailsModel

@{
    ViewData["Title"] = "Detalles de la Verificación";
}

<h1>Detalles</h1>

<div>
    <h4>Verificación</h4>
    <hr />
     <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.Equipment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.Equipment.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.CompletionPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.CompletionPercentage)%
        </dd>
        <hr class="col-12" />
        <dt class="col-sm-2">
            Fecha de Registro
        </dt>
        <dd class="col-sm-10">
            @Model.Verification.CreatedDate.ToString("dd/MM/yyyy HH:mm")
            @if (Model.Verification.CreatedBy != null)
            {
                <span class="text-muted"> por @Model.Verification.CreatedBy.FullName</span>
            }
        </dd>
        @if (Model.Verification.LastModifiedDate.HasValue)
        {
            <dt class="col-sm-2">
                Última Modificación
            </dt>
            <dd class="col-sm-10">
                @Model.Verification.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")
                @if (Model.Verification.ModifiedBy != null)
                {
                    <span class="text-muted"> por @Model.Verification.ModifiedBy.FullName</span>
                }
            </dd>
        }
    </dl>
    
    <h5>Checklist Results</h5>
    <dl class="row">
        @foreach(var prop in Helper.GetChecklistProperties(Model.Verification))
        {
             <dt class="col-sm-4">
                @prop.Name
            </dt>
            <dd class="col-sm-8">
                @prop.Value
            </dd>
        }
    </dl>

    <h5>Summary</h5>
    <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.Observations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.Observations)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.CriticalFindings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.CriticalFindings)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verification.Recommendations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Verification.Recommendations)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Verification.Id">Editar</a> |
    <a asp-page="./Index">Volver al Listado</a>
</div>

@functions {
    public static class Helper {
        public static IEnumerable<(string Name, string Value)> GetChecklistProperties(Proyecto_Laboratorios_Univalle.Models.Verification verification) {
            var props = typeof(Proyecto_Laboratorios_Univalle.Models.Verification).GetProperties()
                .Where(p => p.PropertyType == typeof(Proyecto_Laboratorios_Univalle.Models.Enums.VerificationResult) && p.Name.EndsWith("Check"));
            
            foreach(var p in props) {
                var disp = p.GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false).FirstOrDefault() as System.ComponentModel.DataAnnotations.DisplayAttribute;
                var name = disp?.Name ?? p.Name;
                var val = p.GetValue(verification)?.ToString() ?? "N/A";
                yield return (name, val);
            }
        }
    }
}
