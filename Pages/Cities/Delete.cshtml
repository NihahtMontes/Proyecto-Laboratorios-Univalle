@page
@model Proyecto_Laboratorios_Univalle.Pages.Cities.DeleteModel

@{
    ViewData["Title"] = "Eliminar Ciudad";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Ciudad</h4>
    <hr />
    <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Region)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Status)
        </dd>
        <hr />
        <dt class="col-sm-2">
            Fecha de Registro
        </dt>
        <dd class="col-sm-10">
            @Model.City.CreatedDate.ToString("dd/MM/yyyy HH:mm")
            @if (Model.City.CreatedBy != null)
            {
                <span class="text-muted"> por @Model.City.CreatedBy.FullName</span>
            }
        </dd>
        @if (Model.City.LastModifiedDate.HasValue)
        {
            <dt class="col-sm-2">
                Última Modificación
            </dt>
            <dd class="col-sm-10">
                @Model.City.LastModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")
                @if (Model.City.ModifiedBy != null)
                {
                    <span class="text-muted"> por @Model.City.ModifiedBy.FullName</span>
                }
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="City.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver al Listado</a>
    </form>
</div>
