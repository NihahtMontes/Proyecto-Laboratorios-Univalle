@page
@model Proyecto_Laboratorios_Univalle.Pages.Cities.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Índice de Ciudades</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Cities[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].Status)
            </th>
            <th>Registrado</th>
            <th>Modificado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cities) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.CreatedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.CreatedBy.Initials)
                </small>
            </td>
            <td>
                <small>
                    @Html.DisplayFor(modelItem => item.LastModifiedDate)<br/>
                    por @Html.DisplayFor(modelItem => item.ModifiedBy.Initials)
                </small>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Editar</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Detalles</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
