@page
@model Proyecto_Laboratorios_Univalle.Pages.Cities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Ciudad</h1>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="City.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="City.CountryId" class="control-label"></label>
                <select asp-for="City.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="City.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="City.Name" class="control-label"></label>
                <input asp-for="City.Name" class="form-control" />
                <span asp-validation-for="City.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Region" class="control-label"></label>
                <input asp-for="City.Region" class="form-control" />
                <span asp-validation-for="City.Region" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="City.Status" class="control-label"></label>
                 <select asp-for="City.Status" class="form-control" asp-items="@Proyecto_Laboratorios_Univalle.Helpers.EnumHelper.GetStatusSelectList<Proyecto_Laboratorios_Univalle.Models.Enums.GeneralStatus>()"></select>
                 <span asp-validation-for="City.Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
